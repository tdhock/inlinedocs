citHeader("To cite inlinedocs in publications use:")

citEntry(entry = "Article",
  title        = "Sustainable, Extensible Documentation Generation Using {inlinedocs}",
  author       = personList(as.person("Toby Dylan Hocking"),
                   as.person("Thomas Wutzler"),
                   as.person("Keith Ponting"),
                   as.person("Philippe Grosjean")),
  journal      = "Journal of Statistical Software",
  year         = "2013",
  volume       = "54",
  number       = "6",
  pages        = "1--20",
  doi = "10.18637/jss.v054.i06",
  textVersion  =
  paste("Toby Dylan Hocking, Thomas Wutzler, Keith Ponting, Philippe Grosjean (2013).",
        "Sustainable, Extensible Documentation Generation Using inlinedocs.",
        "Journal of Statistical Software, 54(6), 1-20.",
        "DOI:10.18637/jss.v054.i06")
)
